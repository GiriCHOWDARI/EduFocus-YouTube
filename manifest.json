{
  "manifest_version": 3,
  "name": "EduFocus - YouTube",
  "version": "1.0",
  "description": "Distraction-free YouTube learning by hiding irrelevant content",

  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "128": "icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
